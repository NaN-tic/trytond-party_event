<tryton>
    <data>
        <record model="ir.ui.view" id="party_event_view_tree">
          <field name="model">party.event</field>
          <field name="type">tree</field>
          <field name="arch" type="xml">
            <![CDATA[
            <tree string="Events">
                <field name="type"/>
                <field name="event_date"/>
                <field name="subject"/>
                <field name="resource"/>
                <field name="user"/>
            </tree>
            ]]>
          </field>
        </record>
        <record model="ir.ui.view" id="party_event_view_form">
          <field name="model">party.event</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <![CDATA[
            <form string="Event" col="4">
                <label name="subject"/>
                <field name="subject"/>
                <label name="type"/>
                <field name="type"/>
                <label name="event_date"/>
                <field name="event_date"/>
                <label name="user"/>
                <field name="user"/>
                <label name="resource"/>
                <field name="resource"/>
                <newline/>
                <separator name="description" colspan="6"/>
                <field name="description" colspan="6"/>
            </form>
            ]]>
          </field>
        </record>
        <record model="ir.model.access" id="access_party_event">
            <field name="model" search="[('model', '=', 'party.event')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
